<UserControl x:Class="AutoPartApp.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AutoPartApp">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Controls row -->
            <RowDefinition Height="*"/>
            <!-- DataGrid row (fills remaining space) -->
            <RowDefinition Height="Auto"/>
            <!-- Totals row -->
        </Grid.RowDefinitions>

        <!-- Controls -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="0">
            <TextBlock Text="Months to order:" VerticalAlignment="Center"/>
            <TextBox Width="40" Margin="5,0"
                     Text="{Binding MonthsToOrder, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Suggest Orders"
                    Command="{Binding GenerateOrderSuggestionsCommand}" Margin="10,0"/>
        </StackPanel>

        <!-- DataGrid fills available space and scrolls internally -->
        <DataGrid Grid.Row="1"
                  x:Name="OrdersDataGrid"
                  DataContext="{Binding}"
                  ItemsSource="{Binding OrderSuggestions}"
                  AutoGenerateColumns="False"
                  Margin="0,10,0,0"
                  ColumnWidth="Auto"
                  VerticalAlignment="Stretch"
                  HorizontalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Part ID" Binding="{Binding PartId}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Package" Binding="{Binding Package}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Needed Qty" Binding="{Binding NeededQty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Order Qty" Binding="{Binding OrderQty}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Total BGN" Binding="{Binding TotalBGN, Converter={StaticResource PriceFormatConverter}}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Total EUR" Binding="{Binding TotalEURO, Converter={StaticResource PriceFormatConverter}}" IsReadOnly="True"/>

                <!-- Sales Columns -->
                <DataGridTextColumn x:Name="Sales1Column" Binding="{Binding Sales1}" IsReadOnly="True"/>
                <DataGridTextColumn x:Name="Sales2Column" Binding="{Binding Sales2}" IsReadOnly="True"/>
                <DataGridTextColumn x:Name="Sales3Column" Binding="{Binding Sales3}" IsReadOnly="True"/>
                <DataGridTextColumn x:Name="Sales4Column" Binding="{Binding Sales4}" IsReadOnly="True"/>
                <DataGridTextColumn x:Name="Sales5Column" Binding="{Binding Sales5}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Totals -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Row="2">
            <TextBlock Text="Total BGN: " FontWeight="Bold"/>
            <TextBlock Text="{Binding TotalBGN, Converter={StaticResource PriceFormatConverter}}" Margin="5,0"/>
            <TextBlock Text="Total EUR: " FontWeight="Bold" Margin="20,0,0,0"/>
            <TextBlock Text="{Binding TotalEURO, Converter={StaticResource PriceFormatConverter}}" Margin="5,0"/>
        </StackPanel>
    </Grid>
</UserControl>