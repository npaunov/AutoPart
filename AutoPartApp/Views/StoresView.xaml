<UserControl x:Class="AutoPartApp.StoresView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AutoPartApp">
    <UserControl.Resources>
        <vm:NullToBoolConverter x:Key="NullToBoolConverter"/>
    </UserControl.Resources>
    <StackPanel Margin="20">
        <TextBlock Text="Stores" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
        <ComboBox ItemsSource="{Binding Stores}" SelectedItem="{Binding SelectedStore}" Width="200" Margin="0,0,0,10" />
        <DataGrid ItemsSource="{Binding OrderRows}" AutoGenerateColumns="False" CanUserAddRows="True"
                  IsReadOnly="False" Margin="0,0,0,10"
                  IsEnabled="{Binding SelectedStore, Converter={StaticResource NullToBoolConverter}}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding RowNumber}" IsReadOnly="True" Width="40"/>
                <DataGridTextColumn Header="Part ID" Binding="{Binding PartId, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Width="2*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                <DataGridTextColumn Header="Total BGN" Binding="{Binding TotalBGN}" IsReadOnly="True" Width="100"/>
                <DataGridTextColumn Header="Total EURO" Binding="{Binding TotalEuro}" IsReadOnly="True" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Total BGN: " FontWeight="Bold"/>
            <TextBlock Text="{Binding TotalBGN, StringFormat=F2}" Margin="5,0"/>
            <TextBlock Text="Total EURO: " FontWeight="Bold" Margin="20,0,0,0"/>
            <TextBlock Text="{Binding TotalEuro, StringFormat=F2}" Margin="5,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
