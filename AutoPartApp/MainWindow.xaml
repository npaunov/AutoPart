<Window x:Class="AutoPartApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AutoPartApp"
        xmlns:vm="clr-namespace:AutoPartApp"
        Title="AutoPart Manager" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <TabControl>
            <!-- Tab for Auto Parts -->
            <TabItem Header="Auto Parts">
                <local:AutoPartsView />
            </TabItem>

            <!-- Tab for Warehouse -->
            <TabItem Header="Warehouse">
                <local:WarehouseView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
